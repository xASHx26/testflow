{
  "name": "testflow",
  "version": "1.0.0-alpha",
  "description": "TestFlow â€” Professional Test Automation IDE bridging manual and automation testing",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint src/",
    "test": "jest"
  },
  "author": "TestFlow Team",
  "license": "MIT",
  "dependencies": {
    "puppeteer-core": "^22.0.0",
    "uuid": "^9.0.0",
    "electron-store": "^8.1.0",
    "marked": "^12.0.0",
    "archiver": "^7.0.0",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.testflow.ide",
    "productName": "TestFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "templates/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
